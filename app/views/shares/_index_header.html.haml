- bg_color = Current.holder&.colour
.tools{ style: ("background-color: #{bg_color};" if bg_color) }
  .env_line
    %span.env_text{style: "color: #{Rails.env == 'development' ? 'black' : 'red'}"}
      #{Rails.env}
  .tools_line
    = form_with url: shares_change_holder_path, method: :post, local: true, class: "holder_combo" do
      = label_tag :id, "Current Holder:"
      = select_tag :id,
        options_from_collection_for_select(Holder.order(:name), :id, :name, session[:holder_id]),
        prompt: "Current Holder",
        onchange: "this.form.submit();"
    -if tools_style == 'Shares'
      %button{onclick: "getCurrentPrices()"}
        Get Current Prices
      %button{onclick: "showShareInputForm()"}
        Add new Share
      %button{onclick: "loadAllDividends()"}
        Load all dividends
    -if tools_style == 'Breakdown'
      %button{onclick: "getBreakdownBySectorCondensed()"}
        Breakdown by Sector Condensed
      - if Current.holder.multi_currency
        %button{onclick: "getBreakdownByCurrency()"}
          Breakdown by Currency
    -if tools_style == 'Breakdown_Condensed'
      %button{onclick: "getBreakdownBySector()"}
        Breakdown by Sector
      - if Current.holder.multi_currency
        %button{onclick: "getBreakdownByCurrency()"}
          Get Currency Breakdown
    -if tools_style == 'Breakdown_Currency'
      %button{onclick: "getBreakdownBySector()"}
        Breakdown by Sector
      %button{onclick: "getBreakdownBySectorCondensed()"}
        Breakdown by Sector Condensed
  -if tools_style == 'Shares'
    = render :partial => 'new_share'
  